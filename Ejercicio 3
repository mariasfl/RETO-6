def num_primo(num):
    if num < 2:
        return False
    for i in range(2, num):
        if num % i == 0:
            return False
    return True


def imprimir_primos():
    try:
        numeros = input("Ingrese números separados por comas: ")
        if not numeros.strip():
            raise ValueError("Debe ingresar al menos un número.")

        lista = [int(x.strip()) for x in numeros.split(',') if x.strip()]
        if not lista:
            raise ValueError("No se detectaron números válidos.")

        print("Números primos:")
        for n in lista:
            if num_primo(n):
                print(n)

    except ValueError:
        print("ingrese solo números enteros separados por comas.")
    except Exception as e:
        print(f"Ocurrió un error: {e}")


if __name__ == "__main__":
    imprimir_primos()
